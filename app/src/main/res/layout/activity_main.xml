<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:textAlignment="center">
    <Button
            android:text="/"
            android:layout_width="60dp"
            android:layout_height="50dp" android:id="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/button3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/button4" android:onClick="bolme" android:textColor="#00FF28"/>
    <Button
            android:text="-"
            android:layout_width="60dp"
            android:layout_height="50dp" android:id="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/button" android:onClick="cikarma" android:textColor="#00FF28"/>
    <Button
            android:text="+"
            android:layout_width="60dp"
            android:layout_height="50dp" android:id="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/button4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:onClick="toplam" android:textColor="#00FF28"/>
    <Button
            android:text="*"
            android:layout_width="60dp"
            android:layout_height="50dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="236dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/button2"
            android:onClick="carpma"
            android:textColor="#00FF28"
    />
    <TextView
            android:layout_width="291dp"
            android:layout_height="64dp" android:id="@+id/textView"
            android:text="conclusion:" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:autoSizeTextType="none" android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="224dp"
            android:textColor="@color/black"
    />
    <EditText
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/editText1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="36dp" android:hint="Number 1"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" android:layout_marginEnd="48dp" android:hint="Number 2"/>
</androidx.constraintlayout.widget.ConstraintLayout>